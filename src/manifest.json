{
  "name": "Markdown Pastr",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Turns any copied rich text into markdown when pasting to textarea",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "js/markdown.js",
      "js/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "https://api.github.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_end",
      "js": [
        "js/content_script.js"
      ],
      "all_frames": true
    }
  ]
}